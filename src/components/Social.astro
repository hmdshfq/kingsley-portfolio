---
const { platform, username } = Astro.props;
---
<a href={`https://www.${platform}.com/${username}`}>{platform}</a>

<style>
    a {
      padding: 0.5rem 1rem;
      color: var(--primary-color);
      text-decoration: none;
      font-size: 16px;
      font-weight: bold;
      background-color: var(--accent-color);
      border: none;
      border-radius: 7px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

  </style>