---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "About Me";
const identity = {
  firstName: "Nji kingsley Awah",
  country: "Poland",
  occupation: "Front end web developer",
  hobbies: ["Football", "Music"],
};

const skills = ["HTML", "CSS", "JavaScript", "Nodejs", "Astro"];
---

<style>
  h1 {
    color: wheat;
    font-size: 2.5rem;
    font-family: "Courier New", Courier, monospace;
  }

  h2 {
    font-size: 1rem;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
    color: #a34141;
  }

  .container {
    display: flex;
    flex-wrap: wrap;
    gap: 5px;
    align-items: center;
  }

  .container-1 {
    flex: 1;
    overflow: auto;
    margin: 10px;
    background-color: #9b8282;
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    max-height: 300px;
    text-shadow: 2px 2px 4px #000000;
  }
  .container-2 {
    overflow: auto;
    flex: 1;
    background-color: #948d8d;
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    max-height: 300px;
    text-shadow: 2px 2px 4px #000000;
  }
  .container-3 {
    flex: 1;
    margin: 0;
    background-color: rgba(187, 159, 159, 0.671);
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    max-height: 300px;
    text-shadow: 2px 2px 4px #000000;
  }
  .container-4 {
    flex: 1;
    margin: 0;
    background-color: rgba(128, 147, 167, 0.329);
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    max-height: 300px;
    text-shadow: 2px 2px 4px #000000;
  }
  .container-5 {
    flex: 1;
    margin: 0;
    background-color: #8a7676;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    max-height: 300px;
    text-shadow: 2px 2px 4px #000000;
  }
  .container a {
    color: white;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    text-decoration: none;
    transition: border-bottom 0.3s ease;
    letter-spacing: 2px;
  }

  @media screen and (min-width: 700px) {
    .details {
      color: #1b1818;
      line-height: 1.3rem;
      font-size: 1rem;
      font-weight: bold;
      font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
        sans-serif;
    }

    .container {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      align-items: center;
    }
  }
</style>
<BaseLayout pageTitle="About me">
  <div class="container">
    <div class="container-1">
      <h2>... and my journey</h2>
      <p>My name is {identity.firstName}.</p>
      <p>I live in {identity.country} and I work as a {identity.occupation}.</p>
      {
        identity.hobbies.length >= 2 && (
          <p>
            Two of my hobbies are: {identity.hobbies[0]} and{" "}
            {identity.hobbies[1]}
          </p>
        )
      }
    </div>
    <div class="container-2">
      <p class="details">Here are a few facts about me:</p>
      <p>
        ðŸ‘‹ Hi, i am a refugee from English-speaking Cameroon, now on a coding
        journey for six months. I'm passionate about crafting user-friendly and
        visually appealing websites. ðŸš€ Recently graduated and embracing a new
        life, I bring resilience and a fresh perspective to my work. From HTML
        and CSS to JavaScript and AstroDocs, I thrive on creating simple,
        elegant, and functional web experiences. ðŸ’¡ As a refugee, I see coding
        not just as a skill but as a tool to start all over, connection and
        empowerment. Let's build something amazing together!.
      </p>
    </div>
    <div class="container-3">
      <p>My skills are:</p>
      <ul class="details">
        {skills.map((skill) => <li class="skill">{skill}</li>)}
      </ul>
    </div>

    <div class="container-4">
      <p>Projects</p>
    </div>
  </div>
</BaseLayout>
