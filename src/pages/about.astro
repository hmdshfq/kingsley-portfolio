---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "About Me";
const identity = {
  firstName: "Nji kingsley Awah",
  country: "Poland",
  occupation: "Front end web developer",
  hobbies: ["Football", "Music"],
};

const skills = ["HTML", "CSS", "JavaScript", "Nodejs", "Astro"];
---

<style>
  h1 {
    color: wheat;
    font-size: 2.5rem;
    font-family: "Courier New", Courier, monospace;
  }

  h2 {
    font-size: 1rem;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
    color: #ffffff;
  }

  .container {
    display: block;
    gap: 5px;
    align-items: center;
  }

  .container-1 {
    flex: 1;
    overflow: auto;
    margin: 10px;
    color: white;
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    max-height: 300px;
    text-shadow: 2px 2px 4px #000000;
  }
  .container-2 {
    overflow: auto;
    flex: 1;
    color: white;
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    max-height: 350px;
    text-shadow: 2px 2px 4px #000000;
  }
  .container-3 {
    flex: 1;
    margin: 0;
    color: white;
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    max-height: 300px;
    text-shadow: 2px 2px 4px #000000;
  }
  /*.container-4 {
    flex: 1;
    margin: 0;
    color: white;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    max-height: 300px;
    text-shadow: 2px 2px 4px #000000;
  }*/

  .container-5 {
    flex: 1;
    margin: 0;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    max-height: 300px;
    text-shadow: 2px 2px 4px #000000;
  }
  .container a {
    color: white;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    text-decoration: none;
    transition: border-bottom 0.3s ease;
    letter-spacing: 2px;
  }

  @media screen and (min-width: 700px) {
    .details {
      color: rgba(171, 207, 141, 0.514)248, 0.514);
      line-height: 1.3rem;
      font-size: 1rem;
      font-weight: bold;
      font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
        sans-serif;
    }

  }
</style>
<BaseLayout pageTitle="About me">
  <div class="container">
    <div class="container-1">
      <h2>... and my journey</h2>
      <p>My name is {identity.firstName}.</p>
      <p>I live in {identity.country} and I work as a {identity.occupation}.</p>
      {
        identity.hobbies.length >= 2 && (
          <p>
            Two of my hobbies are: {identity.hobbies[0]} and{" "}
            {identity.hobbies[1]}
          </p>
        )
      }
    </div>
    <div class="container-2">
      <p class="details">Here are a few facts about me:</p>
      <p>
        ðŸ‘‹ Hi, I'm passionate about crafting user-friendly and
        visually appealing websites. ðŸš€ Embracing a new
        life, I bring resilience and a fresh perspective to my work. From HTML
        and CSS to JavaScript and AstroDocs, I thrive on creating simple,
        elegant, and functional web experiencesðŸ’¡.
      </p>
    </div>
    <div class="container-3">
      <p>My skills are:</p>
      <ul class="details">
        {skills.map((skill) => <li class="skill">{skill}</li>)}
      </ul>
    </div>

    <div class="container-4">
      <h1>Projects</h1>
      <p>Check out some projects that I have worked on.</p>
      <img src="" alt="tic tac toe game image">
       <a href="https://tictactoe-njiking.vercel.app/">tic tac toe game</a>
    </div>
  </div>
</BaseLayout>
